<aura:component controller="nameGrabber">
    <aura:attribute name="firstName" type="String"/>
    <aura:attribute name="nameFound" type="Boolean" default="Guest User"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.fetchName}"/>
        
   	
    <div id="UserInfoContainer">
        <h2 id="UserInfo">Welcome back, {!v.firstName}.</h2>
    </div>

</aura:component>